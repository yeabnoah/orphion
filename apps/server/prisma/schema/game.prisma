enum GameTypes {
    INDIVIDUAL
    GROUP
}

model Project {
    Id          String   @id @default(cuid())
    projectName String
    description String?
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    games       Game[]
}

model Game {
    Id        String    @id @default(cuid())
    gameName  String
    gameType  GameTypes
    imageUrls String[]
    answer    String
    hint      String
    time      Int
    projectId String?
    project   Project?  @relation(fields: [projectId], references: [Id])
}
